<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".view.fragment.OrderSuccessFragment">

    <ImageView
        android:id="@+id/iv_order_success"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_order_success"/>

    <TextView
        android:id="@+id/tv_order_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_success_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_order_success_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_success_description"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btn_continue_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_shopping"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/bg_primary"
        android:layout_marginTop="32dp"
        android:paddingVertical="12dp" />

</LinearLayout>